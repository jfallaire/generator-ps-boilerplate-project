<!DOCTYPE html>
<html>

<head>
  <title><%%=title%></title>
  <meta about="Search all content at once." />
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, height=device-height">
  <script src="<%%=config.coveo_cdn%>/js/CoveoJsSearch.js"></script>
  <script src="<%%=config.coveo_cdn%>/js/cultures/<%%=locale.language%>.js"></script>
  <script src="<%%=config.coveo_cdn%>/js/templates/templatesNew.js"></script>

  <script src="assets/js/cultures/<%%=locale.language%>.js"></script>
  <script src="assets/js/<%=customerSafeName%>.bundle.js"></script>

  <link rel="stylesheet" href="assets/styles/salesforce-lightning-design-system.css" />
  <link rel="stylesheet" href="<%%=config.coveo_cdn%>/css/CoveoFullSearchNewDesign.css" />
  <link rel="stylesheet" href="assets/css/local.css" />
  <link rel="stylesheet" href="assets/css/Lex_Coveo_CommunityCaseDeflection.css" />

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      Coveo.SearchEndpoint.configureCloudV2Endpoint('<%%- config.coveo_org_id %>', '<%%- token %>', '<%%- config.coveo_rest_uri -%>');
      Coveo.init(document.getElementById('LexCommunityCaseDeflection'), {
        <%= capitalizeCustomerSafeName %>Custo: {
          pipelineContext: {
            langLocale: '<%%=locale.langLocale%>',
            language:'<%%=locale.language%>',
            subject: '<%%=context.subject%>',
            description: '<%%=context.description%>'
          }
        },
        SalesforceCommunityResultLink: {
          enableLanguage: true
        },
        Analytics: {
          searchHub: 'LexCommunityCaseDeflection'
        },
          
      });
    });
  </script>
  <style>
    #root {
      margin-top:100px;
    }
  </style>
</head>

<body>
  <%%- include('../utilities/globalHeader', {
      title: title,
      enableActionItems: true,
      enableDeflectionActionItem: true
  }); %>
  <div id="root" lang="<%%=locale.language%>" class="THIS">
    <%%- include('../partials/LexCommunityCaseDeflection/search-interface'); %>
  </div>
</body>

</html>