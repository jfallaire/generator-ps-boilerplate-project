<!DOCTYPE html>
<html>

<head>
  <title><%%=title%></title>
  <meta about="Search all content at once." />
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0,width=device-width, height=device-height">
  <script src="<%%=config.coveo_cdn%>/js/CoveoJsSearch.js"></script>
  <script src="<%%=config.coveo_cdn%>/js/cultures/<%%=locale.language%>.js"></script>
  <script src="<%%=config.coveo_cdn%>/js/templates/templatesNew.js"></script>

  <script src="assets/js/lightning_search.bundle.min.js"></script>
  <script src="assets/js/cultures/<%%=locale.language%>.js"></script>
  <script src="assets/js/<%=customerSafeName%>.bundle.js"></script>

  <link rel="stylesheet" href="assets/styles/salesforce-lightning-design-system.css" />
  <link rel="stylesheet" href="<%%=config.coveo_cdn%>/css/CoveoFullSearchNewDesign.css" />
  <link rel="stylesheet" href="assets/css/local.css" />
  <link rel="stylesheet" href="assets/css/Lex_Coveo_CommunitySearch.css" />

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      Coveo.SearchEndpoint.configureCloudV2Endpoint('<%%- config.coveo_org_id %>', '<%%- token %>', '<%%- config.coveo_rest_uri -%>');
      Coveo.init(document.getElementById('LexCommunitySearch'), {
          <%= capitalizeCustomerSafeName %>Custo: {
            pipelineContext: {
              langLocale: '<%%=locale.langLocale%>',
              language:'<%%=locale.language%>',
              patate:''
            }
          },
          Analytics: {
            searchHub: 'LexCommunitySearch'
          },
          Searchbox: {
            placeholder: 'SearchBox_placeholder'
          },
          SalesforceCommunityResultLink: {
            enableLanguage: true
          },
          Facet:{
            dropdownHeaderLabel:'Facet_dropdownHeaderLabel',
            enableSettings:false,
            numberOfValues:5
          }
      });
    });
  </script>
</head>

<body lang="<%%=locale.language%>">
  <%%- include('../utilities/globalHeader', {
      title: title,
      enableActionItems: true,
      enableDeflectionActionItem: false
  }); %>
  <div class="THIS">
    <%%- include('../partials/LexCommunitySearch/search-interface'); %>
  </div>

</body>

</html>